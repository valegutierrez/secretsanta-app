<div class="row">
  <div class="col">
    <h2>Chat</h2>
    <p>Here you'll find your conversations with your Secret Santas or your Gift Receivers!</p>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h2>My Secret Santas</h2>
    <div class="card">
      <div class="card-body p-0 table-responsive">
        <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Event</th>
              <th scope="col"></th>
            </tr>
          </thead>

          <tbody>
            <% @conversations.each do |conversation| %>
              <% if conversation.second_user_id == current_user.id %>
                <tr>
                  <% @event = Event.find(conversation.event_id) %>
                  <td><%= image_tag "new-profile3", height: 50, class: 'rounded-lg' %></td>
                  <td><%= @event.title %></td>
                  <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Actions
                      </button>
                      <div class="dropdown-menu">
                        <%= link_to 'Show', conversation, class: 'dropdown-item' %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <h2>My Gift Receivers</h2>
    <div class="card">
      <div class="card-body p-0 table-responsive">
        <table class="table table-sm">
          <thead>
            <tr>
              <th scope="col"></th>
              <th scope="col">Name</th>
              <th scope="col">Event</th>
              <th scope="col"></th>
            </tr>
          </thead>

          <tbody>
            <% @conversations.each do |conversation| %>
              <% if conversation.first_user_id == current_user.id %>
                <tr>
                  <% @event = Event.find(conversation.event_id) %>
                  <td><%= image_tag User.find(conversation.second_user_id).image, height: 50, class: 'rounded-lg' %></td>
                  <td><%= User.find(conversation.second_user_id).name %></td>
                  <td><%= @event.title %></td>
                  <td>
                    <div class="btn-group">
                      <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Actions
                      </button>
                      <div class="dropdown-menu">
                        <%= link_to 'Show', conversation, class: 'dropdown-item' %>
                      </div>
                    </div>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>