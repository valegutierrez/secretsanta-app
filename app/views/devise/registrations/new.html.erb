<div class="col-md-6 offset-md-3 text-center jumbotron bg-white">
  <%= image_tag 'ss-logo.svg', alt: 'Logo', height: 70 %>
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>

    <div class=”form-group”>
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
    </div><br />

    <div class="form-group">
      <%= f.label :image %> <i>(prefer square images)</i><br />
      <div class="input-group">
        <div class="custom-file">
          <%= f.file_field :image, class: 'custom-file-input', id: 'inputGroupFile01', 'aria-describedby' => 'inputGroupFileAddon01' %>
          <label id="labelFile" class="custom-file-label text-left" for="inputGroupFile01">Choose File</label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-danger' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>