<%= form_with(model: event, local: true, class: 'form-signin') do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control', rows: 3 %>
  </div>

  <div class="form-group">
    <%= form.label :members %>
    <%= form.number_field :members, min: 3, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :price_limit %> 
    <%= form.number_field :price_limit, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :deadline %>
    <%= form.datetime_field :deadline, class: 'form-control', min: Date.today %>
  </div>

  <div class="actions">
    <%= form.submit "Submit", class: 'btn btn-danger' %>
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  </div>
<% end %>
