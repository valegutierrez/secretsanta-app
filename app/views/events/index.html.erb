<div class="jumbotron bg-white">
  <div class="row">
    <div class="col">
      <h1><%= fa_icon('gift') %> My Events</h1>
      <p>
        These are the events where you either created or were invited to. You can start off by clicking 'Create Event' to start your first event!
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Created Events <%= link_to 'Create Event', new_event_path, class: 'btn btn-danger' %></h2>
      <div class="card">
        <div class="card-body p-0 table-responsive">
          <table class="table table-sm">
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col"></th>
              </tr>
            </thead>

            <tbody>
              <% @events.each do |event| %>
                <% if event.admin_id == current_user.id %>
                  <tr>
                    <td><%= event.title %></td>
                    <td><%= event.deadline.strftime("%B %d, %Y") %></td>
                    <td><%= event.deadline.strftime("%I:%M%p") %></td>
                    <td>
                      <div class="btn-group">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          Actions
                        </button>
                        <div class="dropdown-menu">
                          <%= link_to 'Show', event, class: 'dropdown-item' %>
                          <%= link_to 'Edit', edit_event_path(event), class: 'dropdown-item' %>
                          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' }, class: 'dropdown-item' %>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h2>Invited Events</h2>
      <div class="card">
        <div class="card-body p-0 table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Date</th>
                <th scope="col">Time</th>
                <th scope="col"></th>
              </tr>
            </thead>

            <tbody>
              <% @events.each do |event| %>
                <% if event.admin_id != current_user.id and event.attendances.where(user_id: current_user.id).present? %>
                  <tr>
                    <td><%= event.title %></td>
                    <td><%= event.deadline.strftime("%B %d, %Y") %></td>
                    <td><%= event.deadline.strftime("%I:%M%p") %></td>
                    <td>
                      <div class="btn-group">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                          Actions
                        </button>
                        <div class="dropdown-menu">
                          <%= link_to 'Show', event, class: 'dropdown-item' %>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
