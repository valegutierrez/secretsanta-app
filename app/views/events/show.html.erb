<div class="row">
  <div class="col">
    <p id="notice"><%= notice %></p>

    <h2>
      <%= @event.title %>
    </h2>

    <p>
      <%= @event.description %>
    </p>

    <p>
      <strong>Members:</strong>
      <%= @event.members %>
    </p>

    <p>
      <strong>Price range:</strong>
      $<%= @event.price_start %> -
      $<%= @event.price_end %> CLP
    </p>

    <p>
      <strong>Deadline:</strong>
      <%= @event.deadline %>
    </p>

    <table class="table">
    <thead>
      <tr>
        <th scope="col">Members</th>
        <th scope="col">Status</th>
      </tr>
    </thead>

    <tbody>
      <% @event.attendances.each do |member| %>
        <tr>
          <td>Miembro <%= member.id %></td>
          <td>
            <% if member.user_id.nil? %>
              Pending
            <% else %>
              Confirmed
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

    <%= link_to 'Back', events_path, class: 'btn btn-danger' %>
    <%= link_to '' %>
  </div>
</div>